<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.braintreepayments.sample">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light"
        android:icon="@mipmap/ic_launcher">

        <activity android:name=".SampleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HoloThemeActivity"
            android:theme="@android:style/Theme.Holo.Light" />

        <activity android:name=".MaterialLightThemeActivity"
            android:theme="@style/MaterialLightTheme" />

        <activity android:name=".MaterialDarkThemeActivity"
            android:theme="@style/MaterialDarkTheme" />

    </application>

</manifest>
